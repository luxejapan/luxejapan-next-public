{
  "version": 1,
  "rules": {
    "typescript": {
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "strictPropertyInitialization": true,
      "noImplicitThis": true,
      "alwaysStrict": true
    },
    "react": {
      "jsx": "react-jsx",
      "jsxImportSource": "react",
      "jsxFactory": "React.createElement",
      "jsxFragmentFactory": "React.Fragment"
    },
    "imports": {
      "preferDefaultExport": true,
      "importOrder": [
        "^react",
        "^next",
        "^@/components/(.*)$",
        "^@/lib/(.*)$",
        "^@/styles/(.*)$",
        "^@/types/(.*)$",
        "^@/utils/(.*)$",
        "^@/hooks/(.*)$",
        "^@/constants/(.*)$",
        "^[./]"
      ]
    },
    "formatting": {
      "semi": true,
      "singleQuote": true,
      "trailingComma": "es5",
      "printWidth": 100,
      "tabWidth": 2,
      "useTabs": false
    },
    "naming": {
      "components": "PascalCase",
      "hooks": "camelCase",
      "utils": "camelCase",
      "types": "PascalCase",
      "constants": "UPPER_SNAKE_CASE",
      "files": {
        "components": "PascalCase",
        "pages": "kebab-case",
        "styles": "kebab-case",
        "utils": "camelCase"
      }
    },
    "testing": {
      "framework": "jest",
      "coverage": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    },
    "performance": {
      "maxBundleSize": "200kb",
      "maxInitialLoad": "300kb",
      "maxLighthouseScore": {
        "performance": 90,
        "accessibility": 95,
        "bestPractices": 95,
        "seo": 95
      }
    },
    "accessibility": {
      "wcag": "2.1",
      "level": "AA",
      "required": [
        "alt",
        "aria-label",
        "aria-labelledby",
        "aria-describedby",
        "role"
      ]
    },
    "i18n": {
      "defaultLocale": "zh-tw",
      "locales": ["zh-tw", "en", "es", "ko", "vi"],
      "fallbackLocale": "zh-tw"
    },
    "seo": {
      "required": [
        "title",
        "description",
        "og:title",
        "og:description",
        "og:image",
        "twitter:card",
        "twitter:title",
        "twitter:description",
        "twitter:image"
      ]
    }
  }
} 